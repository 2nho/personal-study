<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
		</Console>
   -- 추가 
		<RollingFile name="RollingFile"
			fileName="C:/ProgramData/guardian_log/veinAuth_%d{yyyy-MM-dd}.log"   -- 초기 생성파일 이름지정( * 지우게되면 filePattern의 형식을 따라 초기파일이 생성되므로 삭제하는것이 날짜별 로그설정에 도움됨)
			filePattern="C:/ProgramData/guardian_log/veinAuth_%d{yyyy-MM-dd}.log"> -- filePattern에서 %d{yyyy-MM-dd}와 같이 pattern은 필수항목 yyyy-MM-dd이면 d(day)를 기준으로 TimeBasedTriggeringPolicy interval가 작동 
                                                                             -- yyyy-MM-dd-HH-ss이면 s(second)기준으로 생성되서 매초마다 생성됨
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>
	</Appenders>
